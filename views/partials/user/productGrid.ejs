<% variants.forEach(variant=> { %>
    <a href="/product/<%= variant._id %>/<%= variant.variants._id %>" class="product-link">
        <div class="product-card">

            <div class="wishlist">
                <i class="fa-solid fa-heart"></i>
            </div>

            <div class="product-image">
                <% if (variant.variants.stock===0) { %>
                    <div class="out-of-stock-label">Out of Stock</div>
                    <% } %>

                        <img src="<%= variant.variants.images[0] %>" class="product-img" alt="<%= variant.name %>">
            </div>

            <div class="product-info">
                <h3 class="product-title">
                    <%= `${variant.name} with ${variant.variants.dial_color} dial and ${variant.variants.strap_color}
                        strap` %>
                </h3>
                <p class="brand">
                    Brand: <%= variant.brand?.name %>
                </p>
                <p class="price">
                    â‚¹<%= variant.variants.price %>
                </p>

                <button class="add-cart-btn" data-id="<%= variant.variants._id %>"
                    <%= variant.variants.stock === 0 ? 'disabled' : '' %>>
                    Add to Cart
                </button>
            </div>

        </div>

    </a>
    <% }) %>