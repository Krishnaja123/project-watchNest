<% products.forEach(product=> { %>
    <% product.variants.forEach(variant=> { %>
<a href="/product/<%= product._id %>" class="product-link">
            <div class="product-card">

            <div class="wishlist">
                <i class="fa fa-heart"></i>
            </div>

            <div class="product-image">
                <img src="<%= variant?.images[0] %>" class="product-img" alt="<%= product.name %>">
            </div>

            <div class="product-info">
                <h3 class="product-title">
                    <%= `${product.name} with ${variant.dial_color} dial and ${variant.strap_color} strap` %>
                </h3>
                <p class="brand">
                    Brand: <%= product.brand_id?.name %>
                </p>
                <p class="price">
                    â‚¹<%= variant.price %>
                </p>

                <button class="add-cart-btn" data-id="<%= variant._id %>">
                    Add to Cart
                </button>
            </div>

        </div>

</a>
        <% }) %>
            <% }) %>