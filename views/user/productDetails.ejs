<%- include("../partials/user/header") %>

    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

        <style>
            .thumb-img {
                width: 70px;
                height: 70px;
                object-fit: cover;
                border: 1px solid #ddd;
                margin-bottom: 10px;
                cursor: pointer;
                border-radius: 6px;
            }

            .thumb-img.active {
                border: 2px solid #000;
            }

            .main-image-wrapper {
                width: 100%;
                height: 420px;
                display: flex;
                align-items: center;
                justify-content: center;
                border: 1px solid #eee;
                border-radius: 10px;
                background: #fafafa;
            }

            .main-img {
                max-width: 100%;
                max-height: 100%;
                object-fit: contain;
            }

            .variant-btn {
                border: 1px solid #ccc;
                padding: 8px 14px;
                margin-right: 10px;
                margin-top: 10px;
                border-radius: 8px;
                background: #fff;
                cursor: pointer;
                text-align: left;
                font-size: 14px;
            }

            .variant-btn.active {
                border-color: #000;
                font-weight: 600;
                background: #f8f8f8;
            }

            .main-image-wrapper {
                position: relative;
                overflow: hidden;
                /* VERY IMPORTANT */
                cursor: zoom-in;
            }

            .main-img {
                transition: transform 0.4s ease;
            }

            .main-image-wrapper:hover .main-img {
                transform: scale(1.6);
            }

            .similar-card {
                border-radius: 10px;
                height: 100%;
            }

            .similar-img {
                width: 100%;
                height: 120px;
                object-fit: contain;
                padding: 12px;
            }

            @media (min-width: 768px) {
                .similar-img {
                    height: 140px;
                }
            }

            @media (min-width: 1200px) {
                .similar-img {
                    height: 160px;
                }
            }

            .similar-card .card-body {
                padding: 10px 8px 12px;
            }
        </style>

    </head>

    <body>
        <div class="container my-5">

            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/home">Home</a></li>
                    <li class="breadcrumb-item"><a href="/products">Shop</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <%= product.name %>
                    </li>
                </ol>
            </nav>

            <div class="row">

                <!-- LEFT IMAGE + VARIANTS -->
                <div class="col-md-6">

                    <div class="d-flex gap-3">

                        <!-- THUMBNAILS -->
                        <div class="d-flex flex-column align-items-center">
                            <% defaultVariant.images.forEach((img, index)=> { %>
                                <img src="<%= img %>" class="thumb-img <%= index === 0 ? 'active' : '' %>"
                                    onclick="changeImage('<%= img %>', this)" />
                                <% }) %>
                        </div>

                        <!-- MAIN IMAGE -->
                        <div class="main-image-wrapper">
                            <img id="mainImage" src="<%= defaultVariant.images[0] %>" class="main-img" />
                        </div>

                    </div>

                    <!-- VARIANTS -->
                    <div class="mt-4">
                        <h6 class="fw-bold">Available Variants</h6>

                        <% product.variants.forEach((variant, index)=> { %>
                            <button class="variant-btn <%= index === 0 ? 'active' : '' %>"
                                onclick='changeVariant(<%- JSON.stringify(variant) %>, this)'>
                                Strap: <%= variant.strap_color %><br>
                                    Dial: <%= variant.dial_color %>
                            </button>
                            <% }) %>
                    </div>

                </div>

                <!-- RIGHT PRODUCT DETAILS -->
                <div class="col-md-6 ps-md-5">

                    <h2 class="fw-bold">
                        <%= product.name %>
                    </h2>

                    <p class="text-muted">
                        ⭐ <%= product.reviews_count %> reviews
                    </p>

                    <p class="text-muted">
                        <strong>Category:</strong>
                        <% if (product.cat_id && product.cat_id.length> 0) { %>
                            <%= product.cat_id.map(cat=> cat.name).join(", ") %>
                                <% } else { %>
                                    ""
                                    <% } %>
                    </p>

                    <p class="text-muted">
                        <strong>Brand:</strong>
                        <%= product.brand_id?.name %>
                    </p>

                    <p class="text-muted">
                        <strong>Strap color:</strong>
                        <%= defaultVariant.strap_color %>
                    </p>

                    <p class="text-muted">
                        <strong>Dial color:</strong>
                        <%= defaultVariant.dial_color %>
                    </p>

                    <h3 class="text-danger fw-bold">
                        ₹ <span id="price">
                            <%= defaultVariant.price %>
                        </span>
                    </h3>

                    <p>
                        <strong>Stock:</strong>
                        <span id="stock">
                            <%= defaultVariant.stock %>
                        </span>
                    </p>

                    <p class="mt-3">
                        <%= product.descrip || "No description available" %>
                    </p>

                    <div class="mt-4">
                        <button class="btn btn-danger px-4">Buy Now</button>
                        <button class="btn btn-success px-4 ms-2">Add To Cart</button>
                    </div>
                    
                </div>


            </div>

        </div>
        </div>

        <!-- SIMILAR COLLECTION -->
        <div class="mt-5">
            <h5 class="fw-bold mb-3">Similar Collection</h5>

            <div class="row g-3">
                <% similarProducts.forEach(item=> { %>
                    <div class="col-6 col-md-2">
                        <div class="card h-100 shadow-sm">

                            <img src="<%= item.variants[0].images[0] %>" class="card-img-top similar-img"
                                alt="<%= item.name %>">

                            <div class="card-body text-center p-2">
                                <h6 class="small mb-1 text-truncate">
                                    <%= item.name %>
                                </h6>
                                <p class="mb-0 fw-semibold">
                                    ₹<%= item.variants[0].price %>
                                </p>
                            </div>

                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

        <%- include("../partials/user/footer") %>

            <script>
                function changeImage(src, element) {
                    document.getElementById("mainImage").src = src;

                    document.querySelectorAll(".thumb-img").forEach(img => {
                        img.classList.remove("active");
                    });

                    element.classList.add("active");
                }
            </script>
    </body>

    </html>