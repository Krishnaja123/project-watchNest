<%- include("../partials/user/header") %>

    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                background: #f5f5f5;
                /* soft premium background */
            }


            .product-detail-card {
                background: #fff;
                border-radius: 20px;
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.05);
            }

            #name {
                font-weight: 700;
                font-size: 28px;
                color: #111;
            }

            #price {
                color: #c5a253;
                /* luxury gold */
                font-size: 28px;
            }

            .btn-primary-custom {
                background: #111;
                color: #fff;
                border-radius: 30px;
                padding: 10px 30px;
                border: none;
                transition: 0.3s;
            }

            .btn-primary-custom:hover {
                background: #c5a253;
                transform: translateY(-2px);
            }

            .btn-outline-custom {
                border: 1px solid #111;
                color: #111;
                border-radius: 30px;
                padding: 10px 30px;
                background: transparent;
                transition: 0.3s;
            }

            .btn-outline-custom:hover {
                background: #111;
                color: #fff;
            }

            .thumb-img {
                width: 70px;
                height: 70px;
                object-fit: cover;
                border: 1px solid #ddd;
                margin-bottom: 10px;
                cursor: pointer;
                border-radius: 6px;
            }

            .thumb-img.active {
                border: 2px solid #000;
            }

            .main-image-wrapper {
                width: 100%;
                height: 420px;
                display: flex;
                align-items: center;
                justify-content: center;
                border: 1px solid #eee;
                border-radius: 10px;
                background: #fafafa;
            }

            .main-img {
                max-width: 100%;
                max-height: 100%;
                object-fit: contain;
            }

            .variant-img {
                width: 45px;
                height: 45px;
                object-fit: cover;
                border-radius: 6px;
            }

            .variant-btn {
                border: 1px solid #ccc;
                padding: 4px 4px;
                margin-right: 10px;
                margin-top: 10px;
                border-radius: 8px;
                background: #fff;
                cursor: pointer;
                text-align: left;
                font-size: 14px;
            }

            .variant-btn.active {
                border-color: #000;
                font-weight: 600;
                background: #f8f8f8;
            }

            .variant-btn:hover {
                border-color: var(--accent-gold);
                transform: translateY(-2px);
            }

            .main-image-wrapper {
                position: relative;
                overflow: hidden;
                /* VERY IMPORTANT */
                cursor: zoom-in;
            }

            .main-img {
                transition: transform 0.4s ease;
            }

            .main-image-wrapper:hover .main-img {
                transform: scale(1.6);
            }

            .similar-card {
                border-radius: 10px;
                height: 100%;
            }

            .similar-img {
                width: 100%;
                height: 120px;
                object-fit: contain;
                padding: 12px;
            }

            @media (min-width: 768px) {
                .similar-img {
                    height: 140px;
                }
            }

            @media (min-width: 1200px) {
                .similar-img {
                    height: 160px;
                }
            }

            .similar-card,
            .card {
                border-radius: 16px;
                transition: all 0.3s ease;
                border: 1px solid var(--border-light);
            }

            .card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 25px rgba(0, 0, 0, 0.08);
            }

            .breadcrumb {
                background: transparent;
                font-weight: 500;
            }

            .breadcrumb-item.active {
                color: #c5a253;
            }

            .card-body p {
                color: var(--accent-gold);
            }
        </style>

    </head>

    <body>
        <div class="container my-5">
            <div class="product-detail-card p-4">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/home">Home</a></li>
                        <li class="breadcrumb-item"><a href="/products">Shop</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <%= product.name %>
                        </li>
                    </ol>
                </nav>

                <div class="row">

                    <!-- LEFT IMAGE + VARIANTS -->
                    <div class="col-md-6">

                        <div class="d-flex gap-3">

                            <!-- THUMBNAILS -->
                            <div class="d-flex flex-column align-items-center thumbnail-container">
                                <% defaultVariant.images.forEach((img, index)=> { %>
                                    <img src="<%= img %>" class="thumb-img <%= index === 0 ? 'active' : '' %>"
                                        onclick="changeImage('<%= img %>', this)" />
                                    <% }) %>
                            </div>

                            <!-- MAIN IMAGE -->
                            <div class="main-image-wrapper">
                                <img id="mainImage" src="<%= defaultVariant.images[0] %>" class="main-img" />
                            </div>
                        </div>

                        <!-- VARIANTS -->
                        <div class="mt-4">
                            <h6 class="fw-bold">Available Variants</h6>

                            <% viewedVariants.forEach((variant, index)=> { %>
                                <button class="variant-btn <%= index === 0 ? 'active' : '' %>" data-index="<%= index %>"
                                    onclick="changeVariant(this)">
                                    <img src="<%= variant.images[0] %>" class="variant-img">

                                </button>
                                <% }) %>
                        </div>

                    </div>

                    <!-- RIGHT PRODUCT DETAILS -->
                    <div class="col-md-6 ps-md-5">

                        <h2 class="fw-bold" id="name">
                            <%= `${product.name} with ${defaultVariant.dial_color} dial and
                                ${defaultVariant.strap_color} strap` %>
                        </h2>

                        <p class="text-muted" id="review">
                            ⭐ <%= product.reviews_count %> reviews
                        </p>

                        <h3 class="text-danger fw-bold" id="price">
                            ₹ <span id="priceValue">
                                <%= defaultVariant.price %>
                            </span>
                        </h3>

                        <p id="stockStatus"></p>
                        <p class="text-muted">
                            <strong>Category:</strong>
                            <% if (product.cat_id && product.cat_id.length> 0) { %>
                                <%= product.cat_id.map(cat=> cat.name).join(", ") %>
                                    <% } else { %>
                                        ""
                                        <% } %>
                        </p>

                        <p class="text-muted">
                            <strong>Brand:</strong>
                            <%= product.brand_id?.name %>
                        </p>

                        <p class="text-muted" id="strap_color">
                            <strong>Strap color:</strong>
                            <%= defaultVariant.strap_color %>
                        </p>

                        <p class="text-muted" id="dial_color">
                            <strong>Dial color:</strong>
                            <%= defaultVariant.dial_color %>
                        </p>

                        <p class="mt-3">
                            <%= product.descrip || "No description available" %>
                        </p>

                        <div class="mt-4 d-flex gap-3">
                            <button class="btn-primary-custom">Buy Now</button>
                            <button class="btn-outline-custom">Add To Cart</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- SIMILAR COLLECTION -->
        <!-- SIMILAR PRODUCTS -->
<div class="container my-5">
    <h4 class="fw-bold mb-4 text-center">You May Also Like</h4>

    <div class="row g-4">
        <% similarProducts.forEach(item => { %>
            <div class="col-6 col-md-4 col-lg-3">
                <a href="/product/<%= item._id %>/<%= item.variants[0]?._id %>" class="text-decoration-none text-dark">
                    
                    <div class="card similar-card h-100 p-3">

                        <div class="text-center mb-3">
                            <% if (item.variants[0]?.stock===0) { %>
                    <div class="out-of-stock-label">Out of Stock</div>
                    <% } %>
                    <% if (item.variants[0]?.view=== false) { %>
                    <div class="out-of-stock-label">Not Available</div>
                    <% } %>
                            <img src="<%= item.variants[0].images[0] %>" 
                                 alt="<%= item.name %>" 
                                 class="similar-img">
                        </div>

                        <div class="card-body text-center p-2">
                            <h6 class="fw-semibold" style="min-height: 45px;">
                                <%= item.name.length > 40 
                                    ? item.name.substring(0, 40) + "..." 
                                    : item.name %>
                            </h6>

                            <p class="fw-bold mt-2" style="color:#c5a253;">
                                ₹ <%= item.variants[0].price %>
                            </p>

                            <button class="btn-outline-custom w-100 mt-2">
                                View Product
                            </button>
                        </div>

                    </div>

                </a>
            </div>
        <% }) %>
    </div>
</div>
        <%- include("../partials/user/footer") %>

            <script>

                updateStock(<%= defaultVariant.stock %>);

                const productData = <%- JSON.stringify(product) %>;
                const allVariants = productData.variants;

                function changeVariant(button) {
                    const index = button.dataset.index;
                    const variant = allVariants[index];

                    updateUI(variant);

                    document.querySelectorAll('.variant-btn')
                        .forEach(btn => btn.classList.remove('active'));

                    button.classList.add('active');

                }

                function changeImage(src, element) {
                    document.getElementById("mainImage").src = src;

                    document.querySelectorAll(".thumb-img").forEach(img => {
                        img.classList.remove("active");
                    });

                    element.classList.add("active");
                }

                function updateStock(stock) {
                    const stockElement = document.getElementById("stockStatus");

                    if (stock > 5) {
                        stockElement.innerHTML = `In Stock (${stock} Available)`;
                        stockElement.style.color = "green";
                    } else if (stock > 0) {
                        stockElement.innerHTML = `Only ${stock} left`;
                        stockElement.style.color = "orange";
                    } else {
                        stockElement.innerHTML = "Out of Stock";
                        stockElement.style.color = "red";
                    }
                }

                function updateUI(variant) {
                    document.getElementById('name').innerText =
                        `${productData.name} with ${variant.dial_color} dial and ${variant.strap_color} strap`;

                    document.getElementById('priceValue').innerText = variant.price.$numberDecimal;
                    console.log(variant.price)

                    document.getElementById('strap_color').innerHTML =
                        `<strong>Strap color:</strong> ${variant.strap_color}`;

                    document.getElementById('dial_color').innerHTML =
                        `<strong>Dial color:</strong> ${variant.dial_color}`;

                    updateStock(variant.stock);

                    document.getElementById("mainImage").src = variant.images[0];

                    updateThumbnails(variant.images);
                }

                function updateThumbnails(images) {

                    const thumbContainer = document.querySelector(".thumbnail-container");
                    thumbContainer.innerHTML = "";

                    images.forEach((img, index) => {
                        const image = document.createElement("img");
                        image.src = img;
                        image.className = "thumb-img" + (index === 0 ? " active" : "");
                        image.onclick = function () {
                            document.getElementById("mainImage").src = img;
                        };
                        thumbContainer.appendChild(image);
                    });
                }

            </script>
    </body>

    </html